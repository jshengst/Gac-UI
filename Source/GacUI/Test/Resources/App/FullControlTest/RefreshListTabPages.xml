                      {
                        listView.View = SmallIcon;
                      }
                      case 2:
                      {
                        listView.View = ListViewView::List;
                      }
                      case 3:
                      {
                        listView.View = Tile;
                      }
                      case 4:
                      {
                        listView.View = Information;
